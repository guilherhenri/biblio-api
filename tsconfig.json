{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["ESNext", "ESNext.Array", "ESNext.Collection"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}